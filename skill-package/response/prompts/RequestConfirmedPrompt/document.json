{
    "type": "APLA",
    "version": "0.8",
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "item": {
            "type": "Sequencer",
            "items": [
                {
                    "type": "Selector",
                    "strategy": "randomItem",
                    "when": "${payload.statusResponse.status == 0}",
                    "items": [
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "Hecho"
                        },
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "Listo"
                        },
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "Ya est√°"
                        }
                    ]
                },
                {
                    "type": "Speech",
                    "when": "${payload.statusResponse.status != 0}",
                    "contentType": "text",
                    "content": " ${payload.statusResponse.message}"
                }
            ]
        }
    }
}