{
    "type": "APLA",
    "version": "0.8",
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "item": {
            "type": "Sequencer",
            "items": [
                {
                    "type": "Selector",
                    "when": "${environment.alexaLocale == 'en-US'}",
                    "strategy": "randomItem",
                    "items": [
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "when?"
                        },
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "when will you need it?"
                        }
                    ]
                },
                {
                    "type": "Selector",
                    "when": "${String.slice(environment.alexaLocale, 0, 2) == 'es'}",
                    "strategy": "randomItem",
                    "items": [
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "en qué día?"
                        }
                    ]
                }
            ]
        }
    }
}