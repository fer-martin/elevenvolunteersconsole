{
    "type": "APLA",
    "version": "0.8",
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "item": {
            "type": "Selector",
            "strategy": "randomItem",
            "items": [
                {
                    "type": "Speech",
                    "contentType": "text",
                    "when": "${environment.alexaLocale == 'en-US'}",
                    "content": "I can help you ask for a volunteer, just ask \"i need a volunteer\"."
                },
                {
                    "type": "Speech",
                    "contentType": "text",
                    "when": "${environment.alexaLocale == 'es-US'}",
                    "content": "Te puedo ayudar a conseguir un voluntario, solo di \"necesito un voluntario\"."
                }
            ]
        }
    }
}