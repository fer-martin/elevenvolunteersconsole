{
    "type": "APLA",
    "version": "0.8",
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "item": {
            "type": "Sequencer",
            "items": [
                {
                    "type": "Sequencer",
                    "items": [
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "Vale"
                        },
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "when": "${payload.statusResponse.message != ''}",
                            "content": " ${payload.statusResponse.message}"
                        },
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "Es correcto?"
                        }
                    ]
                }
            ]
        }
    }
}