{
    "type": "APLA",
    "version": "0.8",
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "item": {
            "type": "Sequencer",
            "items": [
                {
                    "type": "Sequencer",
                    "when": "${environment.alexaLocale == 'en-US'}",
                    "items": [
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "Ok"
                        },
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "when": "${payload.statusResponse.message != ''}",
                            "content": " ${payload.statusResponse.message}"
                        },
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "Is that ok?"
                        }
                    ]
                },
                {
                    "type": "Sequencer",
                    "when": "${String.slice(environment.alexaLocale, 0, 2) == 'es'}",
                    "items": [
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "Vale"
                        },
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "when": "${payload.statusResponse.message != ''}",
                            "content": " ${payload.statusResponse.message}"
                        },
                        {
                            "type": "Speech",
                            "contentType": "text",
                            "content": "Es correcto?"
                        }
                    ]
                }
            ]
        }
    }
}